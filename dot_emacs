  :ensure nil
  :mode ("\\.inc\\'" . makefile-gmake-mode)
  :bind (:map makefile-mode-map
              ("C-c C-c" . find-makefile-compile))
  )

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;;;        LSP customizations          ;;;
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;


;; For the TVM-specific langage server,
;; sudo pip3 install ffi-navigator

(use-package lsp-mode
  :ensure t
  :hook
  (c-mode . lsp)
  (c++-mode . lsp)
  ;; Both jedi-language-server and the resulting syntax highlighting
  ;; can be very slow on large python files.  Limiting the file size
  ;; to 32 kB avoids locking emacs up as a result.
  (python-mode . (lambda () (when (< (buffer-size) (* 1024 64)) (lsp))))
  :init
  (setq lsp-keymap-prefix "C-c C-d")
  :config
  (setq lsp-headerline-breadcrumb-enable nil)
  (setq lsp-eldoc-enable-hover nil)
  (setq lsp-signature-render-documentation nil)

  ;; Do not execute a code action just because it is the only one
  ;; available.  Given how code actions can apply changes to many
  ;; buffers at once, and therefore cannot be reversed by `undo`, the
  ;; default behavior of applying a code action without even telling
  ;; the user which code action is to be performed, let alone asking
  ;; for user confirmation, is really aggressive.
  (setq lsp-auto-execute-action nil)

  ;; I prefer to have the formatting applied when I save, not as I
  ;; type.  The on-type formatting moves existing text as I'm working
  ;; on it, and often mis-aligns text that I want to edit using
  ;; `string-rectangle`.  In addition, because the on-type formatting
  ;; runs asynchronously, it interacts very poorly with emacs macros,
  ;; and may alter text as a macro is running.
  (setq lsp-enable-on-type-formatting nil)

  ;; Avoid auto-insertion of closing braces and closing parentheses,
  ;; as they can show up in wildly unexpected places.
  ;;
  ;; See https://github.com/rust-lang/rust-analyzer/issues/16084
  (setq lsp-enable-on-type-formatting nil)

  (lsp-register-client
   (make-lsp-client
    :new-connection (lsp-stdio-connection
                     '("python3" "-m" "ffi_navigator.langserver")
                     (lambda () (= 0 (call-process-shell-command "pip3 list | grep ffi-navigator" nil nil nil)))
                     )
    :major-modes '(python-mode c++-mode)
    :server-id 'ffi-navigator
    :add-on? t))

  ;; python -mpip install ruff-lsp
  (lsp-register-client
     (make-lsp-client
      :new-connection (lsp-stdio-connection '("ruff-lsp"))
      :major-modes '(python-mode)
      :add-on? t
      :server-id 'ruff))
  )

