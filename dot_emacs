(add-hook 'ediff-load-hook
          (function (lambda ()
                      ;; Because side-by-side diffs are easier to read
                      ;; than top/bottom diffs.
                      (setq ediff-split-window-function #'split-window-horizontally)
                      ;; Because the default background color is awful
                      ;; with my preferred color scheme.
                      (dolist (face (list ediff-odd-diff-face-A ediff-odd-diff-face-B
                                                            ediff-even-diff-face-A ediff-even-diff-face-B))

                        (set-face-background face "gray10"))
                      )))



;; Prefer side-by-side display, unless the window is already narrow
;;
;; Split-width-threshold used to be set at 160, to allow two
;; side-by-side windows for standard 80-character lines.  However,
;; magit-log is implemented with each column in its own window, and
;; (window-width) only returns the width of the log column.  On my
;; laptop, this brings the apparent width down from 165 to 135, but I
;; still want it to split left/right.
;;
;; However, my work monitor is 127 characters when split left/right,
;; and I want to avoid having more than one left/right split.
(setq split-width-threshold 128)
(setq split-height-threshold nil)

;; Using nil for helm-split-width-threshold tells helm to use
;; `split-window-sensibly` instead of its own heuristics.  The
;; documentation is currently incorrect, which states that an integer
;; value is required to use `split-window-sensibly`.
(setq helm-split-width-threshold nil)
(setq helm-split-window-default-side 'right)


