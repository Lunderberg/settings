# -*- mode: snippet -*-
# name: script
# key: script
# --
#!/usr/bin/env python3

import argparse


def main(args):
    pass


def arg_main():
    parser = argparse.ArgumentParser()
    parser.add_argument(
        "--pdb",
        action="store_true",
        help="Start a pdb post mortem on uncaught exception",
    )

    args = parser.parse_args()

    try:
        main(args)
    except Exception:
        if args.pdb:
            try:
                import ipdb as pdb
            except ImportError:
                import pdb
            import traceback

            traceback.print_exc()
            pdb.post_mortem()
        raise


if __name__ == "__main__":
    arg_main()
